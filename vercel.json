{
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/script.js",
      "destination": "/widget/script.js"
    },
    {
      "source": "/style.css",
      "destination": "/widget/style.css"
    },
    {
      "source": "/",
      "destination": "/widget/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/widget/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://crm.zoho.com https://crmplus.zoho.com;"
        }
      ]
    }
  ]
}
