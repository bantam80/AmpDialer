{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/widget/(.*)",
      "destination": "/widget/$1"
    },
    {
      "source": "/script.js",
      "destination": "/widget/script.js"
    },
    {
      "source": "/style.css",
      "destination": "/widget/style.css"
    },
    {
      "source": "/",
      "destination": "/widget/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/widget/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Headers", "value": "Authorization, Content-Type" }
      ]
    }
  ]
}
