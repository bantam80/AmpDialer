{
  "rewrites": [
    { "source": "/", "destination": "/widget/index.html" },
    { "source": "/widget/script.js", "destination": "/widget/script.js" },
    { "source": "/widget/style.css", "destination": "/widget/style.css" },
    { "source": "/(.*)", "destination": "/widget/$1" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS,PATCH" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
