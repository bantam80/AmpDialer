{
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/widget",
      "destination": "/widget/index.html"
    },
    {
      "source": "/widget/(.*)",
      "destination": "/widget/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://crm.zoho.com https://crmplus.zoho.com https://*.zohocrm.com;"
        }
      ]
    }
  ]
}
